from random import randint
from time import sleep
print('-=-' * 20)
print('Vou pensar em um número entre 0 e 5. Tente adivinhar....')
print('-=-' * 20)
numero = int(input('Em que numero eu pensei? '))
rand = randint(0, 5)
print('PROCESSANDO...')
sleep(1.5)
if numero >= 0 and numero <= 5:
    if numero == rand:
        print('PARABENS! Você conseguiu me vencer!')
    else:
        print('GANHEI! Eu pensei no numero {} e não no {}!'.format(rand, numero))
else:
    print('ERRO! O numero {} não é um número valido digite um numero entre 0 e 5'.format(numero))
