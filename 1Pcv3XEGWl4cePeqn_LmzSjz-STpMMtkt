from datetime import date
ano = float(input('Que ano quer analizar? Coloque 0 para analizar o ano atual: '))
if ano == 0:
    ano = date.today().year
if ano % 4 == 0 and ano % 100 != 0 or ano % 400 == 0:
    bisesto = 'é'
else:
    bisesto = 'NÃO é'
print('O ano {:.0f} {} BISSEXTO'.format(ano, bisesto))
