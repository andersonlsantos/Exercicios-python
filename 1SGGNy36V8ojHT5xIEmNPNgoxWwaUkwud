import random
print('Sou seu computador...')
print("""Acabei de pensar em um nuúmero de 0 a 10.
Será se você conseque adivinhar qual foi?""")
cont = 0
repete = random.randint(0, 10)
numero = int(input('Qual é o seu palpite? '))
while numero > 10 or numero < 0:
    print('Opção invalida digite um valor entre 0 e 10.')
    numero = int(input('Qual é o seu palpite? '))
while numero != repete:
    cont += 1
    if numero < repete:
        print('Mais... Tente mais uma vez.')
        numero = int(input('Qual é o seu palpite? '))
    elif numero > repete:
        print('Menos... Tente mais uma vez.')
        numero = int(input('Qual é o seu palpite? '))
print('Acertou com {} tentativas. Parabens!'.format(cont + 1))
