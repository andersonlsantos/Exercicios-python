from datetime import date
anoAtual = date.today().year
nacimento = 0
cont = 0
cont2 = 0
for ano in range(1, 8):
    nacimento = int(input('Em que ano a {} pessoa nasceu?'.format(ano)))
    if anoAtual - nacimento >= 18:
        cont += 1
    else:
        cont2 += 1
if cont == 1:
    print('Ao todo tivemos uma pessoa maior de idade!')
elif cont2 == 1:
    print('E tivemos apenas uma pessoa menor de idade!')
if cont != 1:
    print('Ao todo tivemos {} pessoas maiores de idade!'.format(cont))
if cont2 != 1:
    print('Ao todo tivemos {} pessoas menores de idade!'.format(cont2))
