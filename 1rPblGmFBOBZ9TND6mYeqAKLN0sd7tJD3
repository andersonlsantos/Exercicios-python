somaPares = 0
num = 0
for numero in range(1, 7):
    numero = int(input('Digite um valor inteiro: '))
    if numero % 2 == 0:
        somaPares += numero
        num = num + 1
if num == 1:
    print('Apenas o numero {} é par'.format(numero))
else:
    print('{} numeros pares e a soma deles é {}'.format(num, somaPares))
