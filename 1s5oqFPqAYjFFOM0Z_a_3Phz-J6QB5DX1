frase = input(('Digite uma frase: ')).strip()
a = frase.lower()
b = a.find('a') - frase.count(' ')
c = a.rfind('a') - a.count(' ')
print('A letra A aparece {} vezes na frase.'.format(a.count('a')))
print('A primeira letra A apareceu na posição {}'.format(b + 1))
print('A útima letra A aparece na posição {}'.format(c + 1))
